
<h1 class="current-category"><%= params[:category] %></h1>

<h1><% if @movies.count == 0 %></h1>
        <h1>There are no movies in this category yet.</h1>
    <% else %>
    
        <div class="row">
            <% @movies.each do |movie| %>
                <div class="col-md-3">
                    <div>
                       <!-- <div class="movie-title-index"><%= movie.title %></div> -->
                        <a href="/movies/<%= movie.id %>">
                            <%= image_tag movie.movie_img.url(:movie_index), class: "movie" %>
                            
                        </a>
                    </div>
                </div>    
            <% end %>
            
        </div>  
        
    <% end %>
